<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        <p>こんにちは、
        <%= link_to "#{current_user.name}さん", user_path(current_user.id), class: :greeting__link%></p>
      </div>
    <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する(collectionオプションを使う場合、each文はいらない。) %>
        <%= render partial: "prototype", collection: @prototypes %>
    </div>
  </div>
</main>
